@model IEnumerable<SemanaAcademica.Areas.Admin.Models.ListarEventoModel>

@{
    ViewBag.Title = "Eventos";
}

<h2>Grade Horária dos Evento</h2>

@if (Model.Count() > 0)
{
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.ActionLink("Horario(s)", "Index", "Horario", new { id = item.IdEvento }, null)
                </td>
            </tr>
        }
    </table>
}
