@model SemanaAcademica.Areas.Admin.Models.CadastrarVisitaModel

@{
    ViewBag.Title = "Admin - Cadastrar Visita";
}

<h2>Admin - Cadastrar Visita</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Visita</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Vagas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Vagas)
            @Html.ValidationMessageFor(model => model.Vagas)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Locomocao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Locomocao)
            @Html.ValidationMessageFor(model => model.Locomocao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Contribuicao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Contribuicao)
            @Html.ValidationMessageFor(model => model.Contribuicao)
        </div>

        <p>
            <input type="submit" value="Cadastrar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
