@model IEnumerable<SemanaAcademica.Areas.Admin.Models.ListarLocalModel>

@{
    ViewBag.Title = "Index";
}

<h2>Locais</h2>

<br />
@if (Model.Count() > 0)
{
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdLocal }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.IdLocal })
                </td>
            </tr>
        }

    </table>
}
<br />
@{Html.RenderPartial("_CadastrarLocal", new SemanaAcademica.Areas.Admin.Models.CadastrarLocalModel());}
