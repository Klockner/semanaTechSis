@model SemanaAcademica.Areas.Admin.Models.CadastrarMinicursoModel

@{
    ViewBag.Title = "Admin - Cadastrar Minicurso";
}

<h2>Admin - Cadastrar Minicurso</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Minicurso</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.Vagas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Vagas)
            @Html.ValidationMessageFor(model => model.Vagas)
        </div>

        <p>
            <input type="submit" value="Cadastrar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
